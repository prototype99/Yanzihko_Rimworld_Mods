<?xml version="1.0" encoding="utf-8" ?>
<!-- These patches adds Leo PawnKinds to all base game encounters, 
	 with 20% of the weighting of the equivalent Human PawnKinds -->

<Patch>
	<!-- Pirates -->
	<!-- Pirate raid 1; 100 commonality, ranged with melee mix-ins -->
	<Operation Class="PatchOperationAdd">
	<xpath>*/FactionDef[defName="Pirate"]/pawnGroupMakers/li[1]/options</xpath>
	<value>
        <Leo_Drifter>2</Leo_Drifter>
		<Leo_Thrasher>0.6</Leo_Thrasher>
        <Leo_Scavenger>2</Leo_Scavenger>
        <Leo_Pirate>2</Leo_Pirate>
        <Leo_Grenadier_EMP>0.1</Leo_Grenadier_EMP>
        <Leo_Grenadier_Destructive>0.4</Leo_Grenadier_Destructive>
        <Leo_Mercenary_Gunner>2</Leo_Mercenary_Gunner>
        <Leo_Mercenary_Heavy>1.2</Leo_Mercenary_Heavy>
        <Leo_Mercenary_Slasher>0.6</Leo_Mercenary_Slasher>
        <Leo_Mercenary_Sniper>1.4</Leo_Mercenary_Sniper>
        <Leo_Mercenary_Elite>2</Leo_Mercenary_Elite>
